{#{% trans_default_domain 'FOSUserBundle' %}#}
<div class="container">
    <div class="headerRegister">
        <h1>Регистрация</h1>
    </div>
    <div class="content">
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
            {#{{ form_widget(form) }}#}
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_row(form.realname, {'label':'ФИО', 'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.username, {'label':'Логин', 'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.plainPassword.first, {'label':'Пароль', 'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.plainPassword.second, {'label':'Повторите пароль', 'attr': {'class': 'form-control'}}) }}
            {#{{ form_row(form.Repeat password, {'label':'Повторите пароль', 'attr': {'class': 'form-control'}}) }}#}
            {{ form_row(form.email, {'label':'Email', 'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.roles[0], {'label':'Тип учетной записи', 'attr': {'class': 'form-control'}}) }}
            {#{{ form_row(form.submit, {'label':'Тип учетной записи', 'attr': {'class': 'form-control'}}) }}#}
            {{ form_rest(form) }}
            <div>
                <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i>  Регистрация</button>
                <button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i>  Отмена</button>
            </div>
        </form>
    </div>
</div>
